<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长沙新瘾健身仓"
        android:textColor="#DCDC08"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:textSize="42sp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/logo_dah"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_title"
        android:layout_marginTop="102dp"
        android:scaleType="center"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/view_bom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="\@"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="杭州恬宝科技有限公司"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/logo_small"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="410dp"
        android:layout_height="14dp"
        android:src="@drawable/image_dynamic_load"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="111dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/card_white_background"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/image_left"
            android:layout_width="176dp"
            android:layout_height="400dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/card_white_background"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="176dp"
            android:layout_height="400dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

</RelativeLayout>
