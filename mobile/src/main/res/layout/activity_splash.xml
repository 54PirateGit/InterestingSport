<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/logo_dah"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:scaleType="center"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/view_bom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="\@"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="杭州恬宝科技有限公司"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/logo_small"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/image_load"
        android:layout_width="410dp"
        android:layout_height="14dp"
        android:src="@drawable/image_dynamic_load"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/view_ad"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:layout_marginTop="31dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/advertisement"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>